<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ToDoIfy"
             x:Class="ToDoIfy.MainPage">
    <StackLayout>
        <ListView ItemsSource="{Binding TodoItems}" x:Name="TodoListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsDone}" />
                            <Label Text="{Binding Title}" VerticalOptions="Center" />
                            <Button Text="Remove" Clicked="OnRemoveClicked" CommandParameter="{Binding .}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackLayout Orientation="Horizontal">
            <Entry Placeholder="New Task" x:Name="NewTaskEntry" />
            <Button Text="Add" Clicked="OnAddClicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>
